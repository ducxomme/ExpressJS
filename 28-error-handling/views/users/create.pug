extends ../layouts/master

block content
   h1 Create User
   if errors
      each error in errors
         .alert.alert-danger= error
   form(action="/users/create", method="post", enctype="multipart/form-data")
      div(class="form-group")
         label(for="name") Name
         input#name(type="text", class="form-control", name="name", value= values ? values.name : '')
      div(class="form-group")
         label(for="email") Email
         input#email(type="email", class="form-control", name="email", value= values ? values.phone : '')
      div(class="form-group")
        label(for="avatar") Avatar
        input#avatar(type="file", class="form-control-file", name="avatar")
      div(class="d-flex justify-content-center")
         button(class="btn btn-primary") Create