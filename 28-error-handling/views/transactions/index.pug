extends ../layouts/master

block content
   h1 Transactions

   div
      a(href="/transactions/create") Create Transaction
   if (transactions.length > 0)
      table(class="table table-striped")
         thead
            tr
               th(scope="col") #
               th(scope="col") User ID
               th(scope="col") Book ID
               th(scope="col") Complete
         tbody
            
               each transaction, index in transactions
                  tr
                     th(scope="row")= index
                     td= transaction.userId
                     td= transaction.bookId
                     td
                        if !transaction.isComplete
                           a(href="/transactions/" + transaction._id + "/complete") Complete it
   else
      h2 No transaction