extends ../layouts/master

block content
  h1 Users

  a(href="/users/create") Create User
  table(class="table table-striped")
    thead
      tr
        th(scope="col") #
        th(scope="col") Name
        th(scope="col") Phone
        th(scope="col") View
        th(scope="col") Update
        th(scope="col") Delete
    tbody
      each user, index in users
        tr
          th(scope="row")= index
          td= user.name
          td= user.phone
          td
            a(href='/users/' + user.id) View
          td
            a(href='/users/' + user.id + '/update') Update
          td
            a(href='/users/' + user.id + '/delete') Delete